{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "wngtools",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "dist/index.html",
    "devUrl": "http://localhost:4321/",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun build"
  },
  "app": {
    "windows": [
      {
        "title": "wngtools",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "tooltip": "Wngtools"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "window": {
      "allowlist": [
        "create",
        "show",
        "hide",
        "close",
        "setFocus"
      ]
    },
    "webview": {
      "allowlist": [
        "create-webview-window"
      ]
    }
  }
}